{
  // Change this to match your project
  "extends": "./tsconfig.base.json",
  "include": [
    // "example/**/*.tsx",
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "rollup.config.ts"
    // "tests/**/*.js",
    // "tests/**/*.jsx",
  ],
  "compilerOptions": {
    "noEmit": true,
    "target":"ES2020",
    "paths": {
      "@P/*": [
        "packages/*"
      ],
      "@/*": [
        "apps/platform-win/src/*"
      ]
    },
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable",
    ],
    "outDir": "./libs"
  }
}