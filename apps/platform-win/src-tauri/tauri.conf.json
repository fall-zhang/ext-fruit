{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fruit-saladict",
  "mainBinaryName": "fruit-saladict",
  "identifier": "fruit-saladict",
  "version": "0.3.0",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:7799"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {},
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "fruit-saladict",
        "label": "main-page",
        "decorations": false,
        "width": 420,
        "height": 680,
        "visible": true,
        "url": "/search-view",
        "useHttpsScheme": true
      },
      {
        "title": "fruit-saladict",
        "label": "splash-screen",
        "visible": false,
        "url": "/splash-screen"
      },
      {
        "title": "fruit-saladict",
        "label": "new-window",
        "visible": false,
        "url": "/new-window"
      }
    ]
  }
}